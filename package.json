{
  "name": "@stevent-team/epoxy",
  "version": "2.1.0",
  "description": "Lightweight server-side per-route html injection",
  "keywords": [
    "epoxy",
    "injection",
    "react",
    "ssr"
  ],
  "repository": "https://github.com/stevent-team/epoxy",
  "author": "Stevent",
  "license": "MIT",
  "bin": {
    "epoxy": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "source": "./index.ts",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=10"
  },
  "exports": {
    ".": "./dist/index.js",
    "./helpers": "./helpers/dist/index.js"
  },
  "scripts": {
    "build": "tsc -d --emitDeclarationOnly --declarationMap --skipLibCheck --resolveJsonModule --outDir dist && esbuild index.ts --platform=node --target=node16 --format=esm --bundle --sourcemap --external:./node_modules/* --outfile=dist/index.js",
    "build:ci": "yarn build && yarn --cwd helpers build"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.5",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "cors": "^2.8.5",
    "esbuild": "^0.15.10",
    "express": "^4.18.1",
    "keyv": "^4.3.2",
    "require-from-string": "^2.0.2"
  }
}
